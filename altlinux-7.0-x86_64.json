{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><wait>",
        "<enter><wait>",
        " /syslinux/alt0/vmlinuz<wait>",
        " initrd=/syslinux/alt0/full.cz<wait>",
        " text",
        " ai curl=http://{{ .HTTPIP }}:{{ .HTTPPort}}/<wait>",
        " lang=ru_RU stagename=altinst showopts ramdisk_size=123536<wait>",
        " automatic=method:cdrom,network:dhcp<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "6af567514e5ac25aed23bfd9dd0a1c6f",
      "iso_checksum_type": "md5",
      "iso_url": "http://ftp.altlinux.ru/pub/distributions/ALTLinux/c6/get/altlinux-6.0.2-20130702-spt-x86_64-ru-install-dvd5.iso",
      "net_device": "virtio-net",
      "output_directory": "output/altlinux-7.0-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "512"
        ],
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/altlinux-7.0-x86_64-qemu/altlinux-7.0-x86_64.raw"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ]
      ],
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "packer",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "altlinux-7.0-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "output": "output/altlinux-7.0-x86_64-compress/"
      }
    ]
  ]
}
